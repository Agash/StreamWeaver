            {}
            {settings.chat.showPlatformIcons && PlatformIconComponent && (
                 <PlatformIconComponent
                    title={`${event.platform} Platform`}
                    className="h-[1em] w-auto mr-1.5 shrink-0 inline-block align-middle"
                    fill={platformColor}
