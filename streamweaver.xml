            builder.AddFilter("System.Net.Http.HttpClient.YouTubeClient.LogicalHandler", LogLevel.Warning);
            builder.AddFilter("System.Net.Http.HttpClient.YTHttpClient.ClientHandler", LogLevel.Warning);
